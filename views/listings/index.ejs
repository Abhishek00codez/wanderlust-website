<% layout("/layouts/boilerplate") %>
<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }
    .filter{
        text-align: center;
        margin-right: 2rem;
        margin-top: 1rem;
        opacity:0.7;
    }
    .filter:hover{
        opacity:1;
        cursor: pointer;
    }
    .filter span{
        font-size: 0.8rem;
    }
    #tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height:3.5rem;
        padding:1rem;
        margin-left:5rem;
        display: flex;
        align-items: center;
    }
</style>
<body>
    <!-- <h3>All Listings</h3> -->
    <!-- <form method="get" action="/listings/new">
        <button>Create New Listings</button>
    </form> -->
    <div id="filters">
        <div class="filter">
            <i class="fa-solid fa-fire"></i>
            <span>Trending</span>
        </div>
        <div class="filter">
            <i class="fa-solid fa-bed"></i>
            <span>Rooms</span>
        </div>
    </div>
</body>  

<div class="tax-toggle">
    <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="taxToggle">
        <label class="form-check-label" for="taxToggle">Show Prices Inclusive of Taxes</label>
    </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
<div class="card col listing-card">
  <img src="<%= listing.image.url %>" 
  class="card-img-top" 
  alt="listing image"  
  style="height: 20rem; object-fit: cover;">

  <div class="card-img-overlay"></div>

  <div class="card-body">
    <p class="card-text">
        <b><%= listing.title %></b> <br>
        <%= listing.description %><br>
        &#8377;   <%= listing.price.toLocaleString("en-IN") %>
        <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
    </p>
  </div>
</div>
</a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("taxToggle");
    taxSwitch.addEventListener("click",()=>{
        let taxinfo=document.getElementsByClassName("tax-info");
        for(info of taxinfo){
            if(taxSwitch.checked){
                info.style.display="inline";
            }else{
                info.style.display="none";
            }
        }
    });
</script>